<body>
    <div class="container">
        <h1>My To Do List</h1>
        <div class="input">
            <input type="text" id="inputbox" placeholder="Add a new to do...">
            <button id="addBtn">Add</button>
        </div>
        <ul id="todoList">
            <!-- task lists -->
        </ul>
    </div>
    <script>
        let inputbox = document.getElementById("inputbox");
        let addBtn = document.getElementById("addBtn");
        let todoList = document.getElementById("todoList");

        function savedata() {
            localStorage.setItem("data", todoList.innerHTML);
        }

        function showTask() {
            todoList.innerHTML = localStorage.getItem("data") || "";

            // Re-attach click and delete functionality after loading from storage
            let allLi = todoList.querySelectorAll("li");
            allLi.forEach(li => {
                li.addEventListener("click", function () {
                    li.classList.toggle("completed");
                    savedata();
                });

                let delBtn = li.querySelector("span");
                delBtn.addEventListener("click", function (e) {
                    e.stopPropagation();
                    li.remove();
                    savedata();
                });
            });
        }

        addBtn.addEventListener("click", function () {
            let task = inputbox.value.trim();

            if (task === "") {
                alert("Please enter something in your to-do list.");
            } else {
                let li = document.createElement("li");
                li.innerText = task;

                // Toggle complete
                li.addEventListener("click", function () {
                    li.classList.toggle("completed");
                    savedata();
                });

                // Delete button
                let delBtn = document.createElement("span");
                delBtn.innerText = " ‚ùå";
                delBtn.style.color = "red";
                delBtn.style.marginLeft = "auto";
                delBtn.style.cursor = "pointer";

                delBtn.addEventListener("click", function (e) {
                    e.stopPropagation();
                    li.remove();
                    savedata();
                });

                li.appendChild(delBtn);
                todoList.appendChild(li);
                inputbox.value = "";
                savedata();
            }
        });

        showTask(); // üëà Load tasks on page load
    </script>

</body>

</html>
